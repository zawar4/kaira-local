<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kaira" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
    </style>

    <style name="Text01_Darkblue">
        <!-- Font Medium -->
        <!-- Line Height 24pt -->
        <item name="android:fontFamily">@font/avenir_next_medium_font</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/kairaLabel</item>
    </style>

    <style name="Heading01">
        <!-- Font Bold -->
        <!-- Line Height 28pt -->
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/kairaLabel</item>
    </style>

    <style name="Text01">
        <!-- Font Medium -->
        <!-- Line Height 24pt -->
        <item name="android:fontFamily">@font/avenir_next_medium_font</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/kairaSecLabel</item>
    </style>


    <style name="Text02">
        <!-- Font Demi Bold -->
        <!-- Right -->
        <item name="android:fontFamily">@font/avenir_next_demi_bold_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/kairaAccent</item>
    </style>

    <style name="Text02_button">
        <!-- Font Demi Bold -->
        <!-- Center -->
        <item name="android:fontFamily">@font/avenir_next_demi_bold_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/kairaAccent</item>
    </style>

    <style name="Text03_EntryField">
        <!-- Font Demi Bold -->
        <item name="android:fontFamily">@font/avenir_next_demi_bold_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/kairaSecLabel</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Text03_button">
        <!-- Font Demi Bold -->
        <!-- Center -->
        <item name="android:fontFamily">@font/avenir_next_demi_bold_font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text03_Large_button">
        <!-- Font Demi Bold -->
        <!-- Center -->
        <item name="android:fontFamily">@font/avenir_next_demi_bold_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text04">
        <!-- Font Medium -->
        <item name="android:fontFamily">@font/avenir_next_medium_font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/kairaSecLabel</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>